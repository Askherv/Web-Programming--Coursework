@model List<AirplaneSeatReservation.Models.UserAccount>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div id="page-wrapper">
	<div class="main-page">
		<h3 class="title1">Kullanıcılar</h3>
		<div class="blank-page widget-shadow scroll" id="style-2 div1">
			<style>
				table {
					border-collapse: collapse;
					width: 100%;
					margin-top: 20px;
				}

				th, td {
					border: 1px solid #dddddd;
					text-align: left;
					padding: 8px;
				}

				th {
					background-color: #f2f2f2;
				}

				tr:nth-child(even) {
					background-color: #f9f9f9;
				}

				tr:hover {
					background-color: #e0e0e0;
				}
			</style>
			<table border="1">
				<thead>
					<tr>
						<td>Kullanıcı No</td>
						<td>İsim</td>
						<td>Soyisim</td>
						<td>Email</td>
						<td>Şifre</td>
					</tr>
				</thead>
				<tbody>
					@foreach(var user in Model)
					{
						<tr>
							<td>@user.UserAccountID</td>
							<td>@user.FirstName</td>
							<td>@user.LastName</td>
							<td>@user.Email</td>
							<td>@user.Password</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>