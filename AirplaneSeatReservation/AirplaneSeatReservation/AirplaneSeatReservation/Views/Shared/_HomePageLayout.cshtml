<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/ui/styles.css" />
</head>
<body>
    <nav>
        <div class="nav__logo">Sakura Airlines</div>
        <ul class="nav__links">
            <li class="link"><a href="#">@_localization.Getkey("Anasayfa").Value</a></li>
            <li class="link"><a href="#">@_localization.Getkey("Hakkımızda").Value</a></li>
            <li class="link"><a href="#">@_localization.Getkey("Teklifler").Value</a></li>
            <li class="link"><a href="#">@_localization.Getkey("Koltuklar").Value</a></li>
            <li class="link"><a href="#">@_localization.Getkey("Destinasyonlar").Value</a></li>
        </ul>
        <button class="btn" onclick="redirectToLoginPage('/User/Login')">@_localization.Getkey("Giriş Yap").Value</button>
        <button class="btn2" onclick="redirectToLoginPage('/User/Register')">@_localization.Getkey("Kaydol").Value</button>
        <div>
            <ul>
                <li>
                    <a asp-controller="Main" asp-action="Changelanguage" asp-route-culture = "en-US"><i class="flag-icon flag-icon-gb"></i>En</a>
                </li>
                <li>
                    <a asp-controller="Main" asp-action="Changelanguage" asp-route-culture="tr-TR"><i class="flag-icon flag-icon-gb"></i>Tr</a>
                </li>
            </ul>
        </div>
        <script>
            function redirectToLoginPage(page) {
                window.location.href = page;
            }
        </script>
    </nav>
    <header class="section__container header__container">
        <h1 class="section__header">@_localization.Getkey("Hayat Çok Kısa").Value<br />@_localization.Getkey("Dünya Çok Geniş").Value</h1>
    </header>
    <div>
        @RenderBody()
    </div>
    <section class="section__container plan__container">
        <p class="subheader">@_localization.Getkey("Seyahat Desteği").Value</p>
        <h2 class="section__header">@_localization.Getkey("Yolculuğunu güvenle planla").Value</h2>
        <p class="description">
            @_localization.Getkey("Rezervasyonlarınız ve seyahat planlarınızla ilgili bize ulaşın ve yolculuğunuz boyunca sizi nelerin bekleyeceğini görün.").Value
        </p>
        <div class="plan__grid">
            <div class="plan__content">
                <span class="number">01</span>
                <h4>@_localization.Getkey("Dubai için Seyahat Gereksinimleri").Value</h4>
                <p>
                    @_localization.Getkey(" Bu güzel şehirde güzel zaman geçirmek için gerekli seyahat gereksinimleriyle ilgili bilgi edinin.").Value
                </p>
                <span class="number">02</span>
                <h4>@_localization.Getkey("Sağlık Sigortası").Value</h4>
                <p>
                    @_localization.Getkey("Güvenli bir yolculuk için sağlık sigortası yaptırmayı unutmayın.").Value
                </p>
                <span class="number">03</span>
                <h4>@_localization.Getkey("Destinasyonlara göre seyahat gereksinimleri.").Value</h4>
                <p>
                    @_localization.Getkey("Daha fazla bilgi için bizi takip edin.").Value
                </p>
            </div>
            <div class="plan__image">
                <img src="~/ui/assets/plan-1.jpg" alt="plan" />
                <img src="~/ui/assets/plan-2.jpg" alt="plan" />
                <img src="~/ui/assets/plan-3.jpg" alt="plan" />
            </div>
        </div>
    </section>
    <footer class="footer">
        <div class="section__container footer__container">
            <div class="footer__col">
                <h3>Sakura Airlines</h3>
                <p>
                    @_localization.Getkey("Güleryüzlü ekipler ve son model uçaklarla,").Value
                    @_localization.Getkey("Güvenli, konforlu ve unutulmaz deneyimler sağlıyoruz.").Value
                </p>
            </div>
            <div class="footer__col">
                <h4>@_localization.Getkey("İletişim").Value</h4>
                <p>+90 (552) 802 5995</p>
                <p>+90 (544) 426 2669</p>
                <p>nihad.asgarov@ogr.sakarya.edu.tr</p>
                <p>eren.dinc@ogr.sakarya.edu.tr</p>
            </div>
        </div>
        <div class="section__container footer__bar">
            <p>Copyright © Designed by Nihad Asgarov & Eren Dinç</p>
            <div class="socials">
                <span><i class="ri-facebook-fill"></i></span>
                <span><i class="ri-twitter-fill"></i></span>
                <span><i class="ri-instagram-line"></i></span>
                <span><i class="ri-youtube-fill"></i></span>
            </div>
        </div>
    </footer>
</body>
</html>