@model List<AirplaneSeatReservation.Models.Reservation>
@{
    ViewData["Title"] = "Reservation";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div id="page-wrapper">
	<div class="main-page">
		<h3 class="title1">Tüm Rezervasyonlar</h3>
		<div class="blank-page widget-shadow scroll" id="style-2 div1">
			<section class="section__container booking__container">
				<div class="booking__nav">
					<span>Rezervasyon Bilgileri</span>
				</div>
				<style>
					table {
						border-collapse: collapse;
						width: 100%;
						margin-top: 20px;
					}

					th, td {
						border: 1px solid #dddddd;
						text-align: left;
						padding: 8px;
					}

					th {
						background-color: #f2f2f2;
					}

					tr:nth-child(even) {
						background-color: #f9f9f9;
					}

					tr:hover {
						background-color: #e0e0e0;
					}
				</style>
				<table border="1">
					<thead>
						<tr>
							<td>Rez No</td>
							<td>Yolcu Adı</td>
							<td>Yolcu Soyadı</td>
							<td>Cinsiyet</td>
							<td>Pasaport No</td>
							<td>Doğum Tarihi</td>
							<td>Email</td>
							<td>Kalkış Şehri</td>
							<td>Varış Şehri</td>
							<td>Kalkış Tarihi</td>
							<td>Koltuk No</td>
						</tr>
					</thead>
					<tbody>
						@if (Model != null)
						{
							@foreach (var reservation in Model)
							{
								<tr>
									<td>@reservation.ReservationID</td>
									<td>@reservation.PassengerName</td>
									<td>@reservation.PassengerSurname</td>
									<td>@reservation.PassengerGender</td>
									<td>@reservation.PassengerPassportNo</td>
									<td>@reservation.PassengerBirthDate</td>
									<td>@reservation.PassengerEmail</td>
									<td>@reservation.DepartureCity</td>
									<td>@reservation.ArrivalCity</td>
									<td>@reservation.DepartureDate</td>
									<td>@reservation.SeatNo</td>
								</tr>
							}
						}
					</tbody>
				</table>
			</section>
		</div>
	</div>
</div>
