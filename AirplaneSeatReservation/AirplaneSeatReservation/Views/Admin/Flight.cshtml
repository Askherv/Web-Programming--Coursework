@model AirplaneSeatReservation.Models.Flight
@{
    ViewData["Title"] = "Flight";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div id="page-wrapper">
	<div class="main-page">
		<h3 class="title1">Uçuş Ekle</h3>
		<div class="blank-page widget-shadow scroll" id="style-2 div1">
			<section class="section__container booking__container">
				<div class="booking__nav">
					<span>Uçuş Bilgileri</span>
				</div>
				<p style="color:red;">@ViewBag.error</p>
				<p style="color:green;">@ViewBag.correct</p>
				<form action="Flight" method="post">
					<div class="form__group">
						<span><i class="ri-flight-takeoff-line"></i></span>
						<div class="input__content">
							<p>Uçak No</p>
							<div class="input__group">
								<input type="text" asp-for="AircraftID" />
							</div>
						</div>
					</div>
					<div class="form__group">
						<span><i class="ri-flight-land-line"></i></span>
						<div class="input__content">
							<p>Güzergah No</p>
							<div class="input__group">
								<input type="text" asp-for="ItineraryID" />
							</div>
						</div>
					</div>
					<button class="btn3">Ekle</button>
				</form>
			</section>
		</div>
	</div>
</div>