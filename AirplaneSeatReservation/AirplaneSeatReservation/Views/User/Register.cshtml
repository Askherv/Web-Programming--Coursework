@model AirplaneSeatReservation.Models.UserAccount

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}

<section class="form-26-1">
	<div class="form-26-mian">
		<div class="layer">
			<div class="wrapper">
				<div class="form-inner-cont">
					<div class="forms-26-info">
						<h2>Kaydol</h2><br />
					</div>
					<div class="form-right-inf">
						<p style="color:red;">@ViewBag.error</p>
						<p style="color:red;">@ViewBag.error2</p>
						<p style="color: darkgreen;">@ViewBag.correct</p>
						<form action="Register" method="post" class="signin-form">
							<div class="forms-gds">
								<div class="form-input">
									<input type="text" asp-for="FirstName" placeholder="İsim" required />
								</div>
								<div class="form-input">
									<input type="text" asp-for="LastName" placeholder="Soyisim" required />
								</div>
								<div class="form-input">
									<input type="email" asp-for="Email" placeholder="Email" required />
								</div>
								<div class="form-input">
									<input type="password" asp-for="Password" placeholder="Şifre" required />
								</div>
								<div class="form-input">
									<input type="password" asp-for="CPassword" placeholder="Şifreyi onaylayınız" required />
								</div>
								<div class="form-input"><button class="btn">Kaydol</button></div>
							</div>
							<h6 class="already">Hesabınız var mı? <a href="Login"><span>Giriş Yap<span></span></span></a></h6>
						</form>

					</div>
					<div class="copyright text-center">
						<p>
							© Tüm haklar saklıdır | Design by Nihad Asgarov & Eren Dinç
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>